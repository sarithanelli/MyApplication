<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.gm.settingsservice.models.SportModeModel" />

        <variable
            name="clickHandler"
            type="com.gm.settingsapp.viewmodels.EventHandler" />

        <variable
            name="dataPoolHandler"
            type="com.gm.settingsservice.models.DataPoolDataHandler" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <com.gm.settingsapp.ui.customview.SkewConstraintLayout
        android:id="@+id/settings_list_row_vehicle_sport_mode_customization_layout_uk"
        style="?attr/settings_time_date_uil_layout"
        android:focusable="true"
        android:onClick="@{(view) -> clickHandler.onItemClickHandler(view,obj)}"
        bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/settings_list_row_vehicle_sport_mode_customization_lay_out_uk"
                style="?attr/settings_time_date_uil_secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/settings_list_row_vehicle_sport_mode_customization_primary_text_uk"
                    style="?attr/settings_time_date_primary_txt"
                    android:text="@{obj.primaryData}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/settings_list_row_vehicle_sport_mode_customization_img_view_uk"
                style="?attr/settings_time_date_image"
                android:visibility="@{obj.isTogglevisible? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/settings_list_row_vehicle_sport_mode_customization_toggle_btn_uk"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/settings_list_row_vehicle_sport_mode_customization_toggle_btn_uk"
                style="?attr/settings_time_date_tab_toggle_button"
                android:checked="@{obj.isToggleState}"
                android:onClick="@{(view) -> clickHandler.onItemClickHandler(view,obj)}"
                android:tag="@{`eSportModeCustomizationToggleOnOff`}"
                android:visibility="@{View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="10:10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.gm.settingsapp.ui.customview.SkewConstraintLayout>

</layout>