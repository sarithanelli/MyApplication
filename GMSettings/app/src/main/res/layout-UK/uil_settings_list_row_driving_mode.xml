<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.gm.settingsservice.models.DriveModeModel" />

        <variable
            name="clickHandler"
            type="com.gm.settingsapp.viewmodels.EventHandler" />

        <variable
            name="dataPoolHandler"
            type="com.gm.settingsservice.models.DataPoolDataHandler" />

        <variable
            name="position"
            type="Integer" />

        <import type="com.gm.settingsservice.models.eSettingsDisplayStatus" />

    </data>

    <com.gm.settingsapp.ui.customview.SkewConstraintLayout
        android:id="@+id/uil_settings_list_driving_mode_rhd"
        style="?attr/settings_skewlayout"
        android:onClick="@{(view) -> clickHandler.onClickHandler(view,obj)}"
        bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}">

        <TextView
            android:id="@+id/uil_settings_list_driving_mode_primary_txt_rhd"
            style="?attr/settings_layout_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{obj.primaryData}"
            app:layout_constraintBottom_toTopOf="@+id/uil_settings_list_driving_mode_secondary_txt_rhd"
            app:layout_constraintEnd_toStartOf="@+id/uil_settings_list_driving_mode_guideline_text_start_rhd"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/uil_settings_list_driving_mode_secondary_txt_rhd"
            style="?attr/settings_layout_text_secondary"
            android:layout_width="0dp"
            android:text="@{obj.secondaryData}"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/uil_settings_list_driving_mode_primary_txt_rhd"
            app:layout_constraintTop_toBottomOf="@id/uil_settings_list_driving_mode_primary_txt_rhd"
            app:layout_constraintWidth_percent="0.25" />

        <ImageButton
            android:id="@+id/uil_settings_list_driving_mode_img_btn_rhd"
            style="?attr/settings_button_backarrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.92"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.12"
            app:srcCompat="@drawable/ic_icn_next"
            bind:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/uil_settings_list_driving_mode_guideline_text_start_rhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

    </com.gm.settingsapp.ui.customview.SkewConstraintLayout>
</layout>