<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.gm.settingsservice.models.DriveModeModel" />

        <variable
            name="clickHandler"
            type="com.gm.settingsapp.viewmodels.EventHandler" />

        <variable
            name="dataPoolHandler"
            type="com.gm.settingsservice.models.DataPoolDataHandler" />

        <variable
            name="position"
            type="Integer" />

        <import type="com.gm.settingsservice.models.eSettingsDisplayStatus" />

    </data>

    <com.gm.settingsapp.ui.customview.SkewConstraintLayout
        style="?attr/settings_skewlayout"
        android:onClick="@{(view) -> clickHandler.onClickHandler(view,obj)}"
        bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}">

        <TextView
            android:id="@+id/txt_settings_system_speech"
            style="?attr/settings_layout_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{obj.primaryData}"
            app:layout_constraintBottom_toTopOf="@+id/txt_settings_system_speech_secondary"
            app:layout_constraintEnd_toStartOf="@+id/guideline_text_start"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/txt_settings_system_speech_secondary"
            style="?attr/settings_layout_text_secondary"
            android:layout_width="0dp"
            android:text="@{obj.secondaryData}"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/txt_settings_system_speech"
            app:layout_constraintTop_toBottomOf="@id/txt_settings_system_speech"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_text_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

    </com.gm.settingsapp.ui.customview.SkewConstraintLayout>
</layout>