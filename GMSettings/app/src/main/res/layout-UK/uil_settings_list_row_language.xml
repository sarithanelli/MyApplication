<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.gm.settingsservice.models.ESettingsLanguageType" />

        <variable
            name="clickHandler"
            type="com.gm.settingsapp.viewmodels.EventHandler" />

        <variable
            name="dataPoolHandler"
            type="com.gm.settingsservice.models.DataPoolDataHandler" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <com.gm.settingsapp.ui.customview.SkewConstraintLayout
        android:id="@+id/settings_list_row_language_rhd"
        style="?attr/settings_language_skewlayout_row"
        android:onClick="@{(view) -> clickHandler.onClickHandler(view,obj,position)}"
        android:tag="eLanguageRow"
        app:layout_constraintStart_toStartOf="parent"
        bind:skewValue="@{dataPoolHandler.isSkewEnabled}"
        bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}">


        <TextView
            android:id="@+id/settings_list_row_language_text_rhd"
            style="?attr/settings_language_text_medium"
            android:text="@{obj.toString()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/settings_list_row_language_radio_button_rhd"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/settings_list_row_language_radio_button_rhd"
            style="?attr/settings_language_radio_button"
            android:checked="@{dataPoolHandler.SETTINGS_LANGUAGE_TYPE.equals(obj.toString())}"

            android:onClick="@{(view) -> clickHandler.onClickHandler(view,obj,position)}"
            android:tag="eLanguageRow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.gm.settingsapp.ui.customview.SkewConstraintLayout>

</layout>
