<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="clickHandler"
            type="com.gm.settingsapp.viewmodels.EventHandler" />

        <variable
            name="dataPoolHandler"
            type="com.gm.settingsservice.models.DataPoolDataHandler" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="obj"
            type="String" />

    </data>

    <com.gm.settingsapp.ui.customview.SkewConstraintLayout
        style="?attr/settings_skewlayout"
        bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}"
       >
        <androidx.cardview.widget.CardView
            android:id="@+id/settings_list_easy_exit_steering_column_cardview"
            style="?attr/settings_cardview_style"
            app:cardElevation="@dimen/system_sounds_card_elevartion">

            <com.gm.settingsapp.ui.customview.SkewConstraintLayout
                style="?attr/settings_skewlayout_bg"
                bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}">

                <include
                    android:id="@+id/settings_list_easy_exit_steering_column_top_bar"
                    style="?attr/settings_match_wrap_style"
                    layout="@layout/uil_ta_hc_topbar_layout"
                    app:layout_constraintBottom_toTopOf="@+id/settings_comfort_convenience_recycler_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:clickHandler="@{clickHandler}"
                    bind:dataPoolHandler="@{dataPoolHandler}" />
            </com.gm.settingsapp.ui.customview.SkewConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/settings_list_easy_exit_steering_column_radio_btn"
            style="?attr/settings_radiobutton_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableStart="@drawable/img_ta_radiobutton_themeb"
            android:drawablePadding="@dimen/onoffbutton_padding_end"
            android:fontFamily="@font/gmsansui_medium"
            android:padding="@dimen/onoffbutton_padding"
            android:text="@string/settings_display_mode_night"
            android:textAlignment="viewStart"
            android:textSize="@dimen/radio_btn_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_list_easy_exit_steering_column_cardview"
            app:layout_constraintEnd_toEndOf="parent"
           />
    </com.gm.settingsapp.ui.customview.SkewConstraintLayout>

</layout>