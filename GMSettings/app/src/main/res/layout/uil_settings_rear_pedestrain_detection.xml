<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="String" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="clickHandler"
            type="com.gm.settingsapp.viewmodels.EventHandler" />

        <variable
            name="dataPoolHandler"
            type="com.gm.settingsservice.models.DataPoolDataHandler" />
    </data>

    <com.gm.settingsapp.ui.customview.SkewConstraintLayout
        style="?attr/settings_favorites_no_bg_style"
        android:onClick="@{(view) -> clickHandler.onItemClickHandler(view,obj)}"
        bind:slopedAngle="@{-dataPoolHandler.SKEW_MAIN_ANGLE_8}">

        <TextView
            android:id="@+id/settings_rear_pedestrian_detection_view_text"
            style="?attr/settings_sounds_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:text="@{obj}" />

        <ImageView
            android:id="@+id/settings_rear_pedestrian_detection_list_header"
            style="?attr/settings_imageview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settings_rear_pedestrian_detection_view"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/settings_rear_pedestrian_detection_view"
            style="?attr/settings_time_date_tab_toggle_button"
            android:onClick="@{(view) -> clickHandler.onClickHandler(view,obj)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="10:10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.gm.settingsapp.ui.customview.SkewConstraintLayout>

</layout>